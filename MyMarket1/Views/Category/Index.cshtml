<div class="card shadow-lg p-5 mt-5 mb-5 bg-secondary text-white rounded w-75 mx-auto">
    <div class="card-header bg-primary text-white text-center w-100">
        <h3>Categories</h3>
    </div>
    <div class="card-body">
        <table class="table table-dark table-hover align-middle border rounded w-100">
            <thead class="bg-primary text-white">
                <tr>
                    <th scope="col" class="w-25 text-center">ID</th>
                    <th scope="col" class="w-25 text-center">Name</th>
                    <th scope="col" class="text-center pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td class="text-center">@category.Id</td>
                        <td class="text-center">@category.Name</td>
                        <td class="text-center pe-4">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-success btn-sm mx-1">Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm mx-1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex justify-content-end mb-3">
            <a asp-controller="Category" asp-action="Create" class="btn btn-success">Create Category</a>
        </div>
    </div>
</div>
