<div class="row mx-0 g-0 w-100">
    <div class="col-lg-3 py-4 col-md-4 p-0 m-0">
        <div class="card sidebar-filter border-0  rounded-0 m-0">
            <div class="card-header bg-primary  text-white rounded-0">
                <h4 class="mb-1 fw-bold p-1"><i class="bi bi-funnel-fill me-2"></i>Filter Products</h4>
            </div>
            <div class="card-body filter-card-body bg-dark text-white p-2">
                <!-- Filter content with flexbox layout -->
                <div class="filter-section flex-grow-1">
                    <h5 class="filter-heading text-white">
                        <i class="bi bi-grid-3x3-gap me-2"></i>Categories
                    </h5>
                    <div class="category-list" id="categoryFilterContainer">
                        <!-- Category items will be populated dynamically -->
                        <div class="text-center">
                            <div class="spinner-border spinner-border-sm text-light" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="border-secondary">
                <div class="filter-section">
                    <h5 class="filter-heading text-white">
                        <i class="bi bi-tag me-2"></i>Discount Status
                    </h5>
                    <div class="discount-options">
                        <!-- Discount options unchanged -->
                        <div class="filter-option">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="discountFilter" id="filterAllProducts" checked>
                                <label class="form-check-label text-white" for="filterAllProducts">
                                    <i class="bi bi-grid me-2"></i>All Products
                                </label>
                            </div>
                        </div>
                        <div class="filter-option">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="discountFilter" id="filterOnSaleProducts">
                                <label class="form-check-label text-white" for="filterOnSaleProducts">
                                    <i class="bi bi-tag-fill me-2 text-success"></i>On Sale
                                </label>
                            </div>
                        </div>
                        <div class="filter-option">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="discountFilter" id="filterRegularProducts">
                                <label class="form-check-label text-white" for="filterRegularProducts">
                                    <i class="bi bi-currency-dollar me-2 text-secondary"></i>Regular Price
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="border-secondary">
                <button id="resetFilters" class="btn btn-primary w-100">
                    <i class="bi bi-arrow-counterclockwise me-2"></i>Reset Filters
                </button>
            </div>

        </div>
    </div>
    <div class=" col-lg-9 col-md-8 " id="mainList">
    </div>
</div>


<div class="modal fade" id="ProductInfo" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fs-4 fw-bold"><i class="bi bi-info-circle me-2"></i>Product Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <!-- Swiper section - increased width and height -->
                    <div class="col-md-5">
                        <div class="swiper">
                            <div class="swiper-wrapper" id="MySwiper">
                                <!-- Images will be loaded dynamically -->
                            </div>
                            <div class="swiper-pagination"></div>
                            <div class="swiper-button-next"></div>
                            <div class="swiper-button-prev"></div>
                        </div>
                    </div>
                    <!-- Content section -->
                    <div class="col-md-7 card border-primary">
                        <h3 id="modalProductName" class="mb-3 mt-3 card text-center border-primary pb-2 fw-bold"></h3>
                        <div class="row mb-3">
                            <div class="col-12 mb-3">
                                <div class="card border-primary">
                                    <div class="card-body py-2">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center gap-2" id="Prices"></div>
                                            <span class="badge bg-success" id="availability">In Stock</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 mb-3">
                                <div class="card border-primary">
                                    <div class="card-body">
                                        <h5 class="card-title"><i class="bi bi-info-circle me-2 text-primary"></i>Description</h5>
                                        <p id="modalProductDescription" class="card-text text-muted"></p>
                                        <span id="modalProductCategory" class="badge bg-secondary"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Quantity selector and add to cart -->
                        <div class="d-flex gap-2 align-items-center mb-3">
                            <div class="input-group" style="max-width: 140px;">
                                <span class="input-group-text bg-light" >
                                    <i class="bi bi-box2-fill text-primary"></i>
                                </span>
                                <input type="number" id="ProductCount" class="form-control"  value="1" min="1" max="10">
                            </div>
                            <button class="btn btn-primary flex-grow-1 position-relative overflow-hidden" id="addToCartBtn">
                                <span class="d-flex align-items-center justify-content-center">
                                    <i class="bi bi-cart-plus me-2"></i>Add to Cart
                                </span>
                            </button>
                        </div>

                        @* <!-- Additional options -->
                        <div class="d-flex justify-content-between">
                            <button class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-heart me-1"></i>Add to Wishlist
                            </button>
                            <button class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-share me-1"></i>Share
                            </button>
                        </div> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {

    <script src="~/js/home/home-show.js"></script>
    <script src="~/js/home/home-core.js"></script>
    <script src="~/js/home/home-products.js"></script>
    <script src="~/js/home/home-filter.js"></script>

}
